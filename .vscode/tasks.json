{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo run",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "cargo",
			"command": "test",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"label": "rust: cargo test"
		},
		{
			"type": "cargo",
			"command": "test",
			"args": [
				"--",
				"--test-threads=1",
				"--nocapture"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo test nocapture"
		},
		{
			"label": "build wasm (release)",
			"type": "shell",
			"command": "./scripts/build-wasm.sh",
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"label": "serve wasm",
			"type": "shell",
			"command": "./scripts/serve.sh",
			"problemMatcher": []
		},
	]
}